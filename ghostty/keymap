# Ghostty
keybind = ctrl+shift+q=quit

# Windows
keybind = ctrl+alt+enter=new_window
keybind = super+q=close_window

keybind = ctrl+enter=ignore
keybind = ctrl+f11=toggle_fullscreen

# Tabs
keybind = ctrl+t=new_tab

keybind = ctrl+shift+h=previous_tab
keybind = ctrl+shift+l=next_tab

keybind = ctrl+shift+j=scroll_page_down
keybind = ctrl+shift+k=scroll_page_up

keybind = ctrl+q=close_tab

# Splits
keybind = shift+alt+h=new_split:left
keybind = shift+alt+j=new_split:down
keybind = shift+alt+k=new_split:up
keybind = shift+alt+l=new_split:right

keybind = ctrl+alt+h=goto_split:left
keybind = ctrl+alt+j=goto_split:down
keybind = ctrl+alt+k=goto_split:up
keybind = ctrl+alt+l=goto_split:right

keybind = ctrl+alt+z=toggle_split_zoom

keybind = alt+h=resize_split:left,10
keybind = alt+j=resize_split:down,10
keybind = alt+k=resize_split:up,10
keybind = alt+l=resize_split:right,10

keybind = ctrl++q=close_surface
